---
import ProjectItem from "./Project-Item.astro";
---

<section>
  <h2 id="Projects">Projects</h2>
  <div>
    <ProjectItem
      code="https://github.com/CMRicardo/rick-and-morty"
      deploy="https://rick-and-morty-cmricardo.vercel.app/"
      title="Rick and Morty"
      image="images/RickAndMorty.png"
    >
      <p>
        This app lets you see interesting info about your favorite rick and
        morty characters
      </p>
    </ProjectItem>
  </div>
</section>

<style>
  div {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  }
</style>
